#!/bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîç Running pre-commit checks...${NC}"

echo -e "${YELLOW}‚è≥ Linting with Ultracite...${NC}"
if ! npx ultracite lint; then
  echo -e "${RED}‚ùå Linting errors found. Please fix them before committing.${NC}"
  exit 1
fi

echo -e "${YELLOW}‚è≥ Formatting with Ultracite...${NC}"
if ! npx ultracite format; then
  echo -e "${RED}‚ùå Formatting issues found. Please format your code before committing.${NC}"
  exit 1
fi

echo -e "${GREEN}‚úÖ Pre-commit checks passed!${NC}"
exit 0